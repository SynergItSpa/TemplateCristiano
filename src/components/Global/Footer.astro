---
interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  socialLinks?: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], footNote = '', theme = 'dark' } = Astro.props;
---

<footer class="bg-gradient-to-b from-slate-900 to-slate-950 border-t border-gray-700/30 py-12">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8">
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-md flex items-center justify-center">
            <span class="text-white font-bold text-sm">S</span>
          </div>
          <span class="font-bold text-xl bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">SynergIT</span>
        </div>
        <p class="text-gray-300">
          Desarrollamos el futuro digital de tu empresa con tecnología de vanguardia.
        </p>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-white">Servicios</h4>
        <ul class="space-y-2 text-gray-300">
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Soluciones Web</a></li>
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Software a Medida</a></li>
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Consultoría IT</a></li>
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Soporte Técnico</a></li>
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-white">Empresa</h4>
        <ul class="space-y-2 text-gray-300">
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Sobre Nosotros</a></li>
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Proyectos</a></li>
          <li><a href="https://be.synergit.cl/" class="hover:text-white transition-colors">Blog</a></li>
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-white">Contacto</h4>
        <ul class="space-y-2 text-gray-300">
          <li><a href="mailto:synergitspa@synergit.cl" class="hover:text-white transition-colors">synergitspa@synergit.cl</a></li>
          <li><a href="tel:+56954167653" class="hover:text-white transition-colors">+56954167653</a></li>
          <li>Santiago, Chile</li>
        </ul>
        {
          socialLinks?.length ? (
            <div class="flex space-x-3 mt-4">
              {socialLinks.map(({ ariaLabel, href, icon }) => (
                <a
                  class="text-gray-400 hover:text-white transition-colors"
                  aria-label={ariaLabel}
                  href={href}
                >
                  <span set:html={icon} />
                </a>
              ))}
            </div>
          ) : null
        }
      </div>
    </div>
    
    <div class="border-t border-gray-700/30 mt-12 pt-8 text-center text-gray-400">
      <p>&copy; 2025 SynergIT. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>